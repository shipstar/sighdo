  .row
    .span12
      h2 RSVP!
      = form_for :rsvp, '/', class: 'form-horizontal' do |f|

        .control-group
          = f.label :email, class: 'control-label'
          .controls
            = f.text_field :email

        .control-group
          = f.label 'Guests (including you)', class: 'control-label'
          .controls
            = f.number_field :guests, class: 'input-mini', value: 1

        .control-group
          = f.label :dietary_restrictions, class: 'control-label'
          .controls
            .option
              img src="images/eat_anything.jpg"
              label.radio
                = f.radio_button :dietary_restrictions, value: :none
                | I'll eat basically anything

            .option
              img src="images/no_meat.jpg"
              label.radio
                = f.radio_button :dietary_restrictions, value: :vegetarian
                | Eating meat is baaaaaad

            .option
              img src="images/allergies.jpg"
              label.radio
                = f.radio_button :dietary_restrictions, value: :allergies
                | I'm Brian Murphy, and most things will kill me

        .control-group
          = f.label 'Special Requests', class: 'control-label'
          .controls
            = f.text_area :details, rows: 4, class: 'span4'

        .control-group
          .controls
            = f.submit "RSVP", class: 'btn btn-primary'

  hr

